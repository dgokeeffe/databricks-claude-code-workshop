{
  "cluster_name": "claude-code-workshop",
  "spark_version": "17.3.x-cpu-ml-scala2.13",
  "node_type_id": "Standard_D4ds_v5",
  "num_workers": 0,
  "autotermination_minutes": 30,
  "data_security_mode": "SINGLE_USER",
  "single_user_name": "",
  "spark_conf": {
    "spark.databricks.cluster.profile": "singleNode",
    "spark.master": "local[*]"
  },
  "spark_env_vars": {
    "MLFLOW_EXPERIMENT_NAME": "/Workspace/Shared/claude-code-tracing"
  },
  "custom_tags": {
    "Workshop": "ClaudeCodeVibeCoding",
    "ResourceClass": "SingleNode",
    "ManagedBy": "Manual"
  },
  "init_scripts": [
    {
      "volumes": {
        "destination": "/Volumes/main/default/coding_assistants/install-claude.sh"
      }
    }
  ]
}
